FILE="$1"
THISPROC="$3"
SUFFIX="${2##?*.}"
if [ "$SUFFIX" = "$FILE" ];then
	SUFFIX=""
else
	SUFFIX=".$SUFFIX"
fi

echo "$2" > /tmp/selection$THISPROC

if [ ! -e "${FILE}${SUFFIX}" ];then
	echo "${FILE}" > /tmp/filename$THISPROC
else
	FLAG=true
	CNT=1
	while [ $FLAG = "true" ]
		do
			if [ -e "${FILE}-${CNT}${SUFFIX}" ];then
				((CNT++))
			else
				echo "${FILE}-${CNT}" > /tmp/filename$THISPROC
				FLAG="false"
			fi
		done
fi

